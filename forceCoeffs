forceCoeffs
{
    type            forceCoeffs;
    libs            ("libforces.so");
    
    writeControl    timeStep;
    writeInterval   50;

    patches         (baseball);
    rho             rhoInf;
    rhoInf          1.225;
    magUInf         38.0;

    // Use coordinateSystem approach for OpenFOAM 2312
    coordinateSystem
    {
        type    cartesian;
        origin  (0 0 0);
        coordinateRotation
        {
            type    axesRotation;
            e1      (1 0 0);    // x-axis (drag)
            e2      (0 1 0);    // y-axis (side)
            e3      (0 0 1);    // z-axis (lift)
        }
    }

    liftDir         (0 0 1);
    dragDir         (1 0 0);
    sideDir         (0 1 0);

    CofR            (0 0 0);
    lRef            0.0732;
    Aref            0.004215;

    log             true;
}
